mixin video(video)
  .video
    a(href=`/videos/${video.id}`)
      img.video__img(src="", alt="")
      .main_info
        img.uploader(src=`${video.owner.avatarUrl}`)
        h1.title= video.title
      .sub_info
        p= video.owner.username
        p 조회수 *회
        p= video.createdAt

