extends base.pug

block content
  // videos의 control 속성 없앰
  #videoContainer 
    video(src=`/${video.videoUrl}`, width="900")
    div 
      button#play Play
      button#mute Mute
      div 
        span#currentTime 00:00
        span /
        span#totalTime 00:00
      input#volume(type="range", step="0.1", value=0.5, min="0", max="1")
      div 
        input#timeline(type="range", step="1", min="0", value=0)
      div 
        button#fullScreen Enter Full Screen

  //- p= video.description
  //- ul 
  //-   each hashtag in video.hashtags 
  //-     li= hashtag
  //- small= video.createdAt
  //- br
  //- div
  //-   small Uploaded by
  //-     a(href=`/users/${video.owner._id}`) #{ video.owner.name }
  //- br
  //- small 
  //-   | #{ video.meta.views } #{ video.meta.views <= 1 ? "view" : "views" }
  //- br
  //- small 
  //-   | #{ video.meta.rating } / 5
  //- br
  if loggedIn && String(video.owner._id) === String(loggedInUser._id)
    a(href=`${video.id}/edit`) Edit Video &rarr;
    br
    a(href=`${video.id}/delete`) Delete Video &rarr;

